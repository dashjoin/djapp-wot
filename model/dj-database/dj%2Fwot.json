{
    "name": "wot",
    "djClassName": "org.dashjoin.service.SQLDatabase",
    "url": "jdbc:postgresql://postgres:5432/postgres",
    "ID": "dj/wot",
    "tables": {
        "property": {
            "properties": {
                "thing": {
                    "ref": "dj/wot/thing/id",
                    "displayWith": "fk"
                }
            },
            "dj-label": "${name}",
            "instanceLayout": {
                "widget": "page",
                "children": [
                    {
                        "title": "Edit Record",
                        "widget": "edit"
                    },
                    {
                        "title": "Related Records",
                        "widget": "links"
                    },
                    {
                        "display": "value.href ? \n  $curl(\"GET\", $replace(value.href, \"{?step}\", \"\")) :\n  \"no href\"",
                        "title": "Property Value",
                        "widget": "display"
                    }
                ]
            }
        },
        "thing": {
            "dj-label": "${title}",
            "instanceLayout": {
                "widget": "page",
                "children": [
                    {
                        "title": "Thing",
                        "display": "value.{\n  \"title\": title,\n  \"description\": description,\n  \"href\": href\n}",
                        "icons": {
                            "title": "title",
                            "description": "description",
                            "href": "link"
                        },
                        "widget": "display"
                    },
                    {
                        "foreach": "$traverse('wot', 'thing', value.id, 'dj/wot/property/thing')",
                        "layout": "horizontal",
                        "title": "Properties",
                        "widget": "container",
                        "children": [
                            {
                                "display": "value.href ? \n  {'height': 300, 'cardheader': value.name, 'cardcontent': $curl(\"GET\", $replace(value.href, \"{?step}\", \"\"))} :\n  \"\"",
                                "widget": "display"
                            }
                        ]
                    }
                ]
            }
        }
    },
    "username": "postgres",
    "password": "DJ1#\bXVYYcfpR2DwXP9huh68CDkl1jpVfSTHN"
}