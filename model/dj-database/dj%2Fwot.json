{
    "name": "wot",
    "djClassName": "org.dashjoin.service.SQLDatabase",
    "url": "jdbc:postgresql://postgres:5432/postgres",
    "ID": "dj/wot",
    "tables": {
        "property": {
            "properties": {
                "thing": {
                    "ref": "dj/wot/thing/id",
                    "displayWith": "fk"
                }
            },
            "dj-label": "${name}",
            "instanceLayout": {
                "widget": "page",
                "children": [
                    {
                        "title": "Edit Record",
                        "widget": "edit"
                    },
                    {
                        "title": "Related Records",
                        "widget": "links"
                    },
                    {
                        "display": "value.href ? \n  $curl(\"GET\", $replace(value.href, \"{?step}\", \"\")) :\n  \"no href\"",
                        "title": "Property Value",
                        "widget": "display"
                    }
                ]
            }
        },
        "thing": {
            "dj-label": "${title}",
            "instanceLayout": {
                "widget": "page",
                "children": [
                    {
                        "title": "Thing",
                        "display": "value.{\n  \"title\": title,\n  \"description\": description,\n  \"href\": href\n}",
                        "icons": {
                            "title": "title",
                            "description": "description",
                            "href": "link"
                        },
                        "widget": "display"
                    },
                    {
                        "foreach": "$traverse('wot', 'thing', value.id, 'dj/wot/property/thing')",
                        "layout": "horizontal",
                        "title": "Properties",
                        "widget": "container",
                        "children": [
                            {
                                "title": "${value.name}",
                                "widget": "card",
                                "children": [
                                    {
                                        "display": "$curl(\"GET\", value.href)",
                                        "widget": "display"
                                    }
                                ]
                            }
                        ]
                    },
                    {
                        "foreach": "$traverse('wot', 'thing', value.id, 'dj/wot/action/thing')",
                        "layout": "horizontal",
                        "title": "Actions",
                        "widget": "container",
                        "children": [
                            {
                                "print": "(\n  $curl(\"POST\", value.href & $call(\"template\", form), form);\n  $refresh();\n)",
                                "text": "${value.name}",
                                "schemaExpression": "value.vars ? {\n  \"properties\": value.vars\n} : value.input",
                                "widget": "button"
                            }
                        ]
                    }
                ]
            }
        },
        "action": {
            "properties": {
                "thing": {
                    "ref": "dj/wot/thing/id",
                    "displayWith": "fk"
                }
            }
        }
    },
    "username": "postgres",
    "password": "DJ1#\bXVYYcfpR2DwXP9huh68CDkl1jpVfSTHN"
}